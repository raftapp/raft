{
  "name": "raft",
  "version": "1.0.0",
  "description": "Keep your tabs safe - Chrome extension for tab suspension and session management",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "node scripts/sync-version.mjs",
    "build": "vite build",
    "package": "node scripts/package-crx.mjs",
    "package:crx": "node scripts/package-crx.mjs crx",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,html}\"",
    "test:safety": "vitest run tests/safety/",
    "test:trust-report": "vitest run --reporter=default --reporter=json --outputFile.json=coverage/safety-results.json tests/safety/ && node scripts/generate-trust-report.mjs",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{css,html}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "chrome-extension",
    "tab-management",
    "session-management",
    "productivity"
  ],
  "author": "Kevin Raymond",
  "license": "MIT",
  "devDependencies": {
    "@crxjs/vite-plugin": "2.3.0",
    "@preact/preset-vite": "^2.10.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/chrome": "^0.1.34",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "lz-string": "^1.5.0",
    "nanoid": "^5.1.6",
    "preact": "^10.28.2",
    "zustand": "^5.0.10"
  }
}
